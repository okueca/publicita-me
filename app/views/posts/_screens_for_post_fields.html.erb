<div class="nested-form-screens-wrapper nested-form-posts mb-1" data-new-record="<%= line_item_fields.object&.new_record? %>" >

<div class="row align-items-center justify-content-center">
    <div class="col-10 ">
        <%= line_item_fields.collection_select :screen_id, Screen.all, :id, :description_to_show, {prompt: 'Selecione uma categoria'}, { class: 'form-control' } %>
    </div>
    
    <div class="col-2" >
        <%= link_to '#',class:"btn btn-danger btn-xs waves-effect waves-light ", data: { action: 'click->nested-form-posts#remove_association' } do%>
        <i class="fa-solid fa-trash"></i>
        <% end %>
    </div>
</div>

<%= line_item_fields.hidden_field :_destroy %>
</div>