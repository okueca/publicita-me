<%= stylesheet_link_tag('new_post') %>

<% if  notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% elsif @post.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    
      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>

    </div>  
<% end %>



<div class=" " data-controller="map">

  
  
    <div class="layout-mobile   position-relative">
      
    
      <div class="bg-body-secondary flex-wrap">
        <div id="map" class="w-100 vh-100"></div>
      </div>
  
      <div class=" bg-white d-flex flex-column align-items-center  position-absolute z-3 bottom-0 w-100 mobile-h rounded-top-4 overflow-y-scroll">
        <h3 class="text-start mt-3"> New Post</h3>
        <div class="container">
             <%= render "form", post: @post %>
        </div>
       
      </div>


  </div>
  

</div>
