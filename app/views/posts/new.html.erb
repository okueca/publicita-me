<%= stylesheet_link_tag('new_post') %>

<div class=" " data-controller="map">

  



  <% if  mobile_device?  %>
  
    <div class="layout-mobile   position-relative">
      
      <div class="bg-transparent z-3 position-absolute d-flex justify-content-center w-100 mt-3">
        <form class="d-flex w-75" role="search">
          <input class="form-control ms-3" type="search" placeholder="Search" aria-label="Search">
       
        </form>
      </div>
  
      <div class="bg-body-secondary flex-wrap">
        <div id="map" class="w-100 vh-100"></div>
      </div>
  
      <div class=" bg-white d-flex flex-column align-items-center  position-absolute z-3 bottom-0 w-100 mobile-h rounded-top-4 overflow-y-scroll">
        <h3 class="text-start mt-3"> New Post</h3>
        <%= render "form", post: @post %>
      </div>

      <%else%>

      <div class="d-flex flex-row flex-wrap justify-content-between">
        <div class=" flex-grow-1">
          <h3 class="text-start mb-4"> New Post</h3>
          <%= render "form", post: @post %>
        </div>
    
        <div class=" flex-wrap flex-grow-1">
          <div id="map" class="w-100 h-100"></div>
        </div>
    
      </div>
    
  <% end %>



  </div>
  




</div>
